{
    "name": "POMODORO TIMER",
    "author": "wvite",
    "description": "Simple pomodoro timer for Chrome",
    "icons": {
        "16": "./icons/tomato16.png",
        "64": "./icons/tomato64.png",
        "128": "./icons/tomato128.png"
    },
    "version": "0.1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["/js/background.js"],
        "persistent": false
    },
    "permissions": ["notifications", "storage"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}