{
  "name": "POMODORO TIMER",
  "author": "wvite",
  "description": "Simple pomodoro timer for Chrome",
  "icons": {
    "16": "./images/icons/tomato16.png",
    "64": "./images/icons/tomato64.png",
    "128": "./images/icons/tomato128.png"
  },
  "version": "0.1.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Pomodoro timer",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["notifications", "storage", "alarms"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
